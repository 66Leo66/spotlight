---
import { Fragment } from 'react';
const { href } = Astro.props;

// Used to override the default hero component
---

<style>
  .link {
    display: block;
    height: 3rem;
    width: fit-content;
    line-height: 3rem;
    padding: 0 1.5rem;
    cursor: pointer;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.1s ease-in-out;
    border-radius: 0.5rem;
    border: 1px solid #000;
    color: #000;
    background: #eee;
  }

  .link:hover {
    color: #000;
    background: #fff;
  }
</style>

<a class="link" href={href}><slot /></a>
