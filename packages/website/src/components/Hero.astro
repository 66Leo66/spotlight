---

import { Fragment } from "react";
import FeatureCard from "./FeatureCard.astro";
import {Content as CodeBlock} from './codeblock.mdx';

// Used to override the default hero component
---

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes fade-in-neon {
    from {
      color: #ffffff00;
      text-shadow:
        0 0 5px #ffffff00;
    }
    to {
      color: #ffffff;
      text-shadow:
        0 0 10px #ffffff,
        0 0 50px #a5b4fc,
        0 0 75px #a5b4fc;
    }
  }

  .wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    flex-direction: column;
    padding-top: 6rem;
    padding-bottom: 12rem;
    min-height: calc(100vh - 54px);
  }

  .neon-header {
    color: #fff0;
    letter-spacing: 6px;
    text-shadow:
      0 0 5px #fff0;
    font-weight: 500;
    font-size: 3rem;
    text-align: center;
    margin-bottom: 1rem;
    line-height: 1.5;
    animation: fade-in 1s ease-in-out 0s forwards, fade-in-neon 1s ease-out 0.5s forwards;
    font-family: "Raleway", sans-serif;
  }
  
  .sub-heading {
    color: #fff7;
    font-size: 1.2rem;
    font-weight: 400;
    text-align: center;
    max-width: 80%;
    opacity: 0;
    margin-bottom: 3rem; 
    animation: fade-in 1s ease-in-out 1s forwards;
  }

  .hero-image {
    width: 100%;
    margin-bottom: 0rem; 
    border-radius: 0.5rem;
    opacity: 0; animation: fade-in 1s ease-in-out 1s forwards;
  }

  .install-wrapper {
    margin: 0;
    max-width: 100%;;
    opacity: 0;
    animation: fade-in 1s ease-in-out 1s forwards;
  }

  .actions {
    display: flex;
    align-items: center;
    justify-content: center;
    padding-top: 1rem; 
    gap: 2rem;
  }

  .actions > a {
    display: block;
    height: 3rem;
    line-height: 3rem;
    padding: 0 1.5rem;
    cursor: pointer;
    font-weight: 600;
    border: 1px solid #ffffff70;
    opacity: 0.7;
    box-shadow: 0 0 5px #fff8, 0 0 5px #fff8 inset;
    text-decoration: none;
    color: #ffffffcc;
    transition: all 0.1s ease-in-out;
    border-radius: 0.5rem;
  }

  .actions > a:hover {
    opacity: 1;
  }

  .actions > a:first-child {
    border: 1px solid #a5b4fcee;
    color: #a5b4fc;
    box-shadow: 0 0 5px #a5b4fcee, 0 0 5px #a5b4fcee inset;
  }

  @media (min-width: 768px) {
    .neon-header {
      font-size: 3rem;
      letter-spacing: 12px;
    }
    .sub-heading {
      letter-spacing: 3px;
    }
  }

</style>

<div class="wrapper">
  <h1 class="neon-header">Easy fullstack debugging</h1>
  <div class="sub-heading">Spotlight is a highly customizable debug tool embedded in your web app.</div>
  <img src="/images/hero-showcase.png" alt="Spotlight Hero" class="hero-image" />
  <div class="install-wrapper">
    <FeatureCard
      title="Get started now!"
      description={'Simply copy and paste this code snippet into your main javascript file.\nIf you need any more help, simply visit our documentation.'}
    >
      <div />
      <CodeBlock />
    </FeatureCard>
    <p class="actions">
      <a href="/what-is-spotlight/">Read the docs</a>
    </p>
  </div>
</div>